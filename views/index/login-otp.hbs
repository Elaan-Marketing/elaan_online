<div class="page-wrapper">

  <!--User Login section starts-->
  <div class="user-login-section">
    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-md-1 text-center">
          <div class="login-wrapper">
            <ul
              class="ui-list nav nav-tabs justify-content-center mar-bot-30"
              role="tablist"
            >
              <li class="nav-item login-item">
                <a
                  class="nav-link login-link "
                  href="login"
                  role="tab"
                  aria-selected="false"
                >Login</a>
              </li>
              <li class="nav-item register-item">
                <a
                  class="nav-link register-link"
                  href="signup"
                  role="tab"
                  aria-selected="false"
                >Signup</a>
              </li>
            </ul>
            <div class="ui-dash tab-content">
              <div
                class="tab-pane login-pane fade show active"
                id="login"
                role="tabpanel"
              >
                {{>index/_message}}
                <form id="login-form" action="/loginotp" method="post">
                  <input type="number" value="{{phone}}" name="phone" style="display: none;">
                  <div class="form-group">
                    <input
                      type="number"
                      name="otp"
                      id="password"
                      tabindex="2"
                      class="form-control"
                      placeholder="OTP Code"
                      value="{{#if otp}}{{otp}}{{else}}{{/if}}"
                    />
                  </div>
                  <div class="row mar-top-20">
                    <div class="col-md-6 col-12 text-left">
                      <div class="res-box">
                        <input
                          type="checkbox"
                          tabindex="3"
                          class=""
                          name="remember"
                          id="remember"
                        />
                        <label for="remember">Remember Me</label>
                      </div>
                    </div>
                    <div class="col-md-6 col-12 text-right">
                      <div class="res-box sm-left">
                        <a href="guestlogin" tabindex="5" class="forgot-password"><b>Continue as Guest</b></a>
                      </div>
                    </div>
                  </div>
                  <div class="res-box text-center mar-top-30">
                    <button type="submit" class="btn v3"><i
                        class="ion-log-in"
                      ></i>
                      Continue</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--User login section ends-->
  <!--Login section ends-->
</div>
<!--Page Wrapper ends-->